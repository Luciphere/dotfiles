# [Nulstillet config med Relative Duedate]
data.location=/home/mark/.task
news.version=3.4.2

# --- VISUELT ---
# Bruger standard-temaet
include /usr/share/doc/task/rc/dark-256.theme
color=on

# Relative duedates og flottere kolonner
report.next.columns=id,priority,project,tags,due.relative,description
report.next.labels=ID,P,Project,Tag,Due,Description

# Lidt luft i siderne
column.padding=2
indent.report=2

# --- FUNKTIONALITET ---
weekstart=Monday
confirmation=no

# --- ALIASSER ---
alias.rm=delete
alias.ls=list
